{
  "name": "photoglass",
  "version": "0.1.0",
  "description": "A modern network monitoring and diagnostic tool with an elegant UI for real-time network visualization",
  "private": true,
  "main": "dist/server/index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "build:client": "tsc && vite build",
    "build:server": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outfile=dist/server/index.js",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "start": "NODE_ENV=production node dist/server/index.js",
    "lint": "eslint \"client/src/**/*.{ts,tsx}\" --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "format": "prettier --write \"**/*.{ts,tsx,css,json,md}\"",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tanstack/react-query": "^5.8.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cmdk": "^0.2.0",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-day-picker": "^8.9.1",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "recharts": "^2.9.3",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "wouter": "^2.12.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.24.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.47",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/photoglass"
  },
  "keywords": [
    "network-monitoring",
    "network-diagnostics",
    "typescript",
    "react",
    "vite",
    "express"
  ],
  "author": "PhotoGlass Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/photoglass/issues"
  }
}